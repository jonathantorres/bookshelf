CFLAGS := gcc -std=c11 -Wall -Wextra -Wpedantic
PROGS := 2.13 2.27 2.30 2.36 2.42 2.53 2.55 2.56 2.57        \
		 2.58 2.59 2.60 2.61 2.62 2.63 2.64 2.65 2.66        \
		 2.67 2.68 2.69 2.70 2.71 2.73 2.74 2.76 2.78        \
		 2.79 2.80 2.84 2.90 2.92 2.93 2.94 2.95 2.96 2.97

$(PROGS):%: ./%.c
	$(CFLAGS) $^ -o $@ -lm
	./$@

.PHONY: clean
clean:
	rm -f ./*.o ./*.h.gch
	rm -f $(PROGS)
